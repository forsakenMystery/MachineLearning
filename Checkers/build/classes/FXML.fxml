<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="800.0" maxWidth="1080.0" minHeight="800.0" minWidth="1080.0" prefHeight="800.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLController">
   <right>
      <VBox prefHeight="200.0" prefWidth="210.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="icon" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#checkerscheckers" onMouseEntered="#enter" onMouseExited="#ext" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="5.0" left="30.0" top="5.0" />
               </VBox.margin></ImageView>
            <Button fx:id="train" mnemonicParsing="false" onMouseClicked="#trainClicked" prefHeight="50.0" prefWidth="210.0" text="train" />
            <Separator prefHeight="50.0" prefWidth="210.0" />
            <Button fx:id="player1" mnemonicParsing="false" onMouseClicked="#player1File" prefHeight="50.0" prefWidth="210.0" text="player1" />
            <Separator prefHeight="50.0" prefWidth="210.0" />
            <Button fx:id="player2" mnemonicParsing="false" onMouseClicked="#player2file" prefHeight="50.0" prefWidth="210.0" text="player2" />
            <Separator prefHeight="50.0" prefWidth="210.0" />
            <Button fx:id="bot" mnemonicParsing="false" onMouseClicked="#startBotGame" prefHeight="50.0" prefWidth="210.0" text="play against Bot" />
            <Separator prefHeight="50.0" prefWidth="210.0" />
            <Button fx:id="accuracy" mnemonicParsing="false" onMouseClicked="#accuracyClicked" prefHeight="50.0" prefWidth="210.0" text="accuracy" />
            <Separator prefHeight="50.0" prefWidth="210.0" />
            <Button fx:id="random" mnemonicParsing="false" onMouseClicked="#randomClicked" prefHeight="50.0" prefWidth="210.0" text="play against Random" />
            <Separator prefHeight="50.0" prefWidth="210.0" />
            <Button fx:id="exit" mnemonicParsing="false" onMouseClicked="#exit" prefHeight="50.0" prefWidth="210.0" text="exit" />
         </children>
      </VBox>
   </right>
   <center>
      <AnchorPane fx:id="board" minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
